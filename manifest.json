{
  "manifest_version": 3,
  "name": "Swimlane Correlator",
  "version": "2.0.0",
  "description": "Adds copy button for all cases",
  "permissions": ["scripting", "clipboardWrite"],
  "host_permissions": ["https://bluenode.int.ctrlgroup.local/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Swimlane Correlator",
    "default_icon": "sw_crop.png"
  },
  "content_scripts": [{
    "matches": ["https://bluenode.int.ctrlgroup.local/*"],
    "js": ["content.js"]
  }],
  "icons": {
    "16": "sw_crop.png",
    "48": "sw_crop.png",
    "128": "sw_crop.png"
  }
}
